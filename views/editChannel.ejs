<div  class="container">
  <div class="cotainer" style="text-align:center; border:2px solid black">
<h2>Edit <%=channel.name%>'s Channel</h2>
<br>
<br>
<form method="POST" action="/mytube/<%=channel._id%>?_method=PUT">
  <div class="form-group">
    <label >Name</label>
    <input type="text" name="channel[name]" value="<%=channel.name%>" placeholder="Enter name">
  </div>
  <br>
  <div class="form-group">
    <label>Image</label>
    <input type="text" name="channel[image]" value="<%=channel.image%>" placeholder="Image URL">
  </div>
  <br>
  <div class="form-group">
    <label>Description</label>
    <textarea name="channel[description] "><%=channel.description%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
</div>
<% include partials/footer%>
