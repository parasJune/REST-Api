<div class="container">
  <div class="cotainer" style="text-align:center; border:2px solid black">
<h2>Sign Up</h2>
<br>
<br>
<form method="POST" action="/register">
  <div class="form-group">
    <label >First Name</label>
    <input type="text" name="user[firstName]" placeholder="Enter First Name">
  </div>
  <div class="form-group">
    <label > Surname</label>
    <input type="text" name="user[surname]" placeholder="Enter surname">
  </div>
  <div class="form-group">
    <label>Male</label>
    <input type="radio" name="user[gender]">
    <label>Female</label>
    <input type="radio" name="user[gender]">
    <label>Prefer not to say</label>
    <input type="radio" name="user[gender]">
  </div>
  <div class="form-group">
    <label > Username</label>
    <input type="text" name="user[username]" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label > Password</label>
    <input type="text" name="user[password]" placeholder="Enter password">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
</div>
</div>
<% include partials/footer%>